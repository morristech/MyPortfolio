<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation='vertical'
    android:gravity="center"
    android:background="@color/primary_color"
    >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:transitionName="title"
        android:text="@string/app_name"
        android:textColor="@color/text_icon_color"
        android:textSize="45sp"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.LobsterBold"
        tools:ignore="MissingPrefix"
        />

    <TextView
        android:id="@+id/stv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/splash_screen_author_margin"
        android:text="@string/splash_screen_author"
        android:textSize="16sp"
        android:layout_gravity="end"
        />

    <com.droidsonroids.skillprogressview.SkillProgressView
        android:id="@+id/skill_progress_view"
        android:layout_width="100dp"
        android:layout_height="100dp" />


</LinearLayout>
