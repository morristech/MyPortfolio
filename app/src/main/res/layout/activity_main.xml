<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ppv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation='vertical'
    android:layout_height="match_parent"
    android:background="@color/primary_color"
   >

    <com.panwrona.myportfolio.customviews.ProgressPhotoView
        android:id="@+id/ppv"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        ppv:radius="48dp"
        ppv:strokeThickness="2dp"
        ppv:progressColor="@color/accent_color"
        ppv:backgroundColor="@color/light_primary_color"/>

    <TextView
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Click!"
        android:textSize="16sp"/>

</LinearLayout>
