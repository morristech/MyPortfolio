<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:civ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:elevation="@dimen/toolbar_elevation"
        android:background="@drawable/main_background"
        civ:contentInsetStart="0dp"
        >

        <RelativeLayout
            android:id="@+id/toolbar_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_logo"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/toolbar_title_margin_top"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:transitionName="title"
                android:textColor="@color/text_icon_color"
                android:textSize="20sp"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.LobsterRegular"
                tools:ignore="MissingPrefix"
                />

            <com.panwrona.myportfolio.customviews.CircularImageView
                android:id="@+id/portfolio_logo"
                android:layout_width="@dimen/toolbar_circle_image_height"
                android:layout_height="@dimen/toolbar_circle_image_height"
                android:layout_marginTop="@dimen/toolbar_title_margin_top"
                android:layout_marginStart="@dimen/default_layout_margin"
                android:layout_alignParentStart="true"
                android:layout_below="@id/title"
                civ:circularRadius="8dp"
                civ:strokeWidth="2dp"
                civ:strokeColor="@color/text_icon_color"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:textColor="@color/text_icon_color"
                android:text="@string/name"
                android:layout_toEndOf="@id/portfolio_logo"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/toolbar_title_margin_top"
                android:layout_marginStart="@dimen/default_layout_margin"
                fontPath="fonts/Roboto-Thin.ttf"
                tools:ignore="MissingPrefix"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/light_primary_color"
                android:text="@string/occupation"
                android:layout_toEndOf="@id/portfolio_logo"
                android:layout_below="@id/name"
                android:layout_marginStart="@dimen/default_layout_margin"
                fontPath="fonts/Roboto-Thin.ttf"
                tools:ignore="MissingPrefix"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:weightSum="3"
                android:layout_marginBottom="@dimen/default_layout_margin"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/social_network_icon_dimen"
                    android:src="@drawable/twitter"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/social_network_icon_dimen"
                    android:src="@drawable/linkedin"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/social_network_icon_dimen"
                    android:src="@drawable/github"
                    android:layout_weight="1"
                    />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

</LinearLayout>