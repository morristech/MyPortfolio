<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <declare-styleable name="ProgressPhotoView">
        <attr name="strokeThickness" format="dimension"/>
        <attr name="progressColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="backgroundColor" format="color" />
        <attr name="imageSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="SpellingTextView">
        <attr name="text" format="string" />
        <attr name="animationLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="DownloadProgressView">
        <attr name="circleRadius" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

</resources>
